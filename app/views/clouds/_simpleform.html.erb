<%= simple_form_for @cloud do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :longitude, as: :float %>
  <%= f.input :latitude, as: :float %>
  <%= f.input :picture_url %>
  <%= f.input :available_from,
        as: :string,
        input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :available_until,
        as: :string,
        input_html: { data: { controller: "datepicker" } } %>
  <%= f.submit %>
<% end %>
