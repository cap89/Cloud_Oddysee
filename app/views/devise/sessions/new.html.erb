<div class="container">
  <div class="login-container">
    <div class="login-form-wrapper">
      <h2 class="headline">Ready to dive in? Let's your next adventure! Sign in now and explore the possibilities that lie ahead.</h2>
<br>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
        <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control" } %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= f.input :remember_me, as: :boolean, label: "Remember me", class: "form-check-input" %>
          </div>
        <% end %>

        <%= f.button :submit, "Log in", class: "custom-button-update" %>
      <% end %>


    </div>

  </div>
      <%= render "devise/shared/links" %>
</div>
