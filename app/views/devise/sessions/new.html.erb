<div class="center-container">
  <div class="login-container">
    <div class="login-form-wrapper">
      <h2>Sign in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
        <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" } %>
        </div>
        <div class="form-group">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control", placeholder: "Password" } %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= f.input :remember_me, as: :boolean, label: "Remember me", class: "form-check-input" %>
          </div>
        <% end %>

        <%= f.button :submit, "Log in", class: "btn btn-primary btn-block mt-3" %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
