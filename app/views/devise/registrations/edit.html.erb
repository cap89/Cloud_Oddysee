<div class="container">
<div class="center-container">
  <div class="edit-profile-container">
    <div class="edit-profile-form-wrapper">
      <h2 class="headline">Customize your profile as you wish.</h2>
      <br>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>



        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
        <div class="form-group">
          <% f.label :first_name, "First Name:", class: "input-label" %>
          <%= f.input :first_name, required: true, autofocus: true, input_html: { autocomplete: "first_name", class: "form-control" } %>
        </div>
        <div class="form-group">
          <% f.label :last_name, "Last Name:", class: "input-label" %>
          <%= f.input :last_name, required: true, autofocus: true, input_html: { autocomplete: "last_name", class: "form-control" } %>
        </div>
                <div class="form-group">
          <% f.label :email, "Email:", class: "input-label" %>
          <%= f.input :email, required: true, autofocus: true, class: "form-control" %>
        </div>
        <br>

        <button type="button" id="toggle-password-change">Change Password</button>

<div id="password-change-fields" style="display:none;">
  <div class="form-group">
    <% f.label :password, "Enter your new password", class: "input-label" %>
    <%= f.input :password, required: false, input_html: { autocomplete: "new-password", class: "form-control" } %>
  </div>
  <div class="form-group">
    <% f.label :password_confirmation, "Enter your password again to confirm", class: "input-label" %>
    <%= f.input :password_confirmation, required: false, input_html: { autocomplete: "new-password", class: "form-control" } %>
  </div>
  <!-- Include current_password if needed -->
</div>


        <br>
        <br>

        <div class="form-group">
          <% f.label :current_password, "Enter your current password to confirm your changes:", class: "input-label" %>
          <%= f.input :current_password, required: true, input_html: { autocomplete: "current-password", class: "form-control" } %>
        </div>

        <div class="form-actions">
          <%= f.submit "Update my profile", class: "custom-button-update" %>
        </div>
      <% end %>




     <div><%= button_to "Delete my profile", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "custom-button-delete" %></div>
<p>*required field</p>
    </div>
  </div>
</div>
</div>
