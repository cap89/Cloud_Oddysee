  <div class="booked-clouds">
    <% if @bookings.empty? %>
  <p>Hunt for clouds and initiate offerings.<%= link_to " Click here to create your cloud offer.", new_cloud_path %></p>

  <% else %>
    <% pending_bookings.each do |booking| %>
    <div class="card">
                <img height="200px" src="<%= booking.cloud.picture_url %>" alt="<%= booking.cloud.name %>">
                <h5 class="headline-profile"><%= booking.cloud.name %></h5>
                <p><strong><%= booking.cloud.address %></strong></p>
                <p>Start of Reservation: <strong><%= booking.start_date %></strong></p>
                <p>End of of Reservation: <strong><%= booking.end_date %></strong></p>
                <div class="delete-link">
                <%= link_to_to 'Accept this booking', accept_booking_path(booking), method: :patch %>
                <%= link_to_to 'Reject this booking', reject_booking_path(booking), method: :patch %>
              </div>
          </div>
        <% end %>
      <% end %>
</div>
